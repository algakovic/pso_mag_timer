#!/usr/bin/env python
# A simple timer program used to feed Mags

import time
from playsound import playsound
from subprocess import call

def timer(seconds=int(input("How many seconds? "))):
    while seconds > 0:
        if seconds == 30:
            print("30 SECONDS REMAINING...")
        if seconds in range(11):
            print(seconds)
        if seconds == 1:
            print("------------------------\nF   E   E   D     M   E\n------------------------")
            playsound('C:/Users/kamik/code/projects/pso_timer/sounds/AlpineCheckPoint.wav')
            time.sleep(10)
            call('clear') # clear terminal screen
            seconds = 215
        time.sleep(1)
        seconds -= 1

timer()
